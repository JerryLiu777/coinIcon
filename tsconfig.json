{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "lib": ["es6"],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": ["./types"],
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules", "./**/*.test.ts"],
  "files": ["./types/index.d.ts", "./src/index.ts"]
}
